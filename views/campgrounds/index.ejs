<div>
<% for (let campground of campgrounds){ %>
<div class="card  mb-3"> 
    <div class="row">
        <div class="col-md-6">
            <% if(campground.image.length){ %> 
            <img src="<%=campground.image[0].url%>" class="img-fluid h-100 w-100" alt="">
            <% }else{ %> 
                <img src="https://res.cloudinary.com/best-place/image/upload/v1628011813/hzych9btwf1s7r3vleys.png" class="img-fluid" alt="">
                <% } %> 
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <h5 class="card-title"><%=campground.title%></h5>
                <p class="card-text"><%=campground.description%></p>
                <p class="card-text">
                    <small class="text-muted"><%=campground.location%></small>
                </p>
                <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary"><%=campground.title%></a>
            </div>
        </div>
    </div>

</div>
 <% } %>
 
 <script>
const campgrounds={features:<%-JSON.stringify(campgrounds)%>};
 </script>
 <script src="/javascript/clusterMap.js"></script>